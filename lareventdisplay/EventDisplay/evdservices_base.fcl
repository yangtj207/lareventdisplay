 ScaleDigitsByCharge:        0       # 0 = off, 1 = on
 MinimumSignal:              5.      # minimum ADC value to draw in TDC vs Wire views
 StartTick:                  0.      # Starting tick for the display
 TotalTicks:                 2048.   # display TDC ticks 0 -> TotalTicks
